<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <EditText
        android:id="@+id/amount_input"

        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.6"

        android:inputType="numberDecimal"
        android:maxLength="7"
        android:gravity="center_horizontal"
        android:hint="@string/amount_input_hint"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginTop="@dimen/amount_input_margin_top"

    />

    <Button
        android:id="@+id/amount_confirm_button"

        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.4"

        android:text="@string/confirm"

        app:layout_constraintTop_toBottomOf="@id/amount_input"
        app:layout_constraintStart_toStartOf="@id/amount_input"
        app:layout_constraintEnd_toEndOf="@id/amount_input"

        android:layout_marginTop="@dimen/amount_confirm_btn_margin_top"

    />

</android.support.constraint.ConstraintLayout>